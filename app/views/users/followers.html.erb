<% unless @followers.blank? %>
<h3>Your followers are displayed below</h3>
<% @followers.each do |user| %>
<div class="container">
	<div class="row">
		<div class="span4"></div>
		<div class="span5">
			<table class="table table-striped table-condensed">
				<thead>
				   <tr>	
					<th>Email</th>
					<th>Username</th>
					<th></th>
				   </tr> 	
				</thead>
				<tbody>
					<tr>
						<td><%= user.email %></td>
						<td><%= user.username %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
  </div>
  <% end %>
  <% else %>
    <h3>You do not have any followers yet!</h3>
  <% end %>  
