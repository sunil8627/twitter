<% unless @following.blank? %>
<h3>You are following the below users</h3>
<% @following.each do |user| %>
<div class="container">
	<div class="row">
		<div class="span4"></div>
		<div class="span5">
			<table class="table table-striped table-condensed">
				<thead>
				   <tr>	
					<th>Email</th>
					<th>Username</th>
					<th></th>
				   </tr> 	
				</thead>
				<tbody>
					<tr>
						<td><%= user.email %></td>
						<td><%= user.username %></td>
						<td>
						  <%= tag "input", { "class" => "btn btn-primary", "type" => "button", "value" => "UnFollow", "onclick" => "update_unfollowing(#{user.id});" } %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
  </div>
  <% end %>
  <% else %>
    <h3>You are not following anyone yet!</h3>
  <% end %>  


<script type="text/javascript">
  function update_unfollowing(userid){
	var user_id = userid;
	
	$.get( "/unfollow", { user: user_id});
  };  
</script>